.topic__post-header
  %span 投稿者:
  =link_to user_path(@topic.user.id), class: 'user__nickname-header-show' do
    = @topic.user.nickname
  -if user_signed_in? && current_user.id == @topic.user_id
    =link_to edit_topic_path(@topic.id), method: :get, class: 'topic__edit-show' do
      =icon 'fas', 'edit'
    =link_to topic_path(@topic.id), method: :delete, class: 'topic__delete-show' do
      =icon 'far', 'trash-alt'
      
.topic__post-show
  .topic__post-show-flame
    -if @topic.post?
      -if @topic.post.file.content_type.include?('image/')
        .content__video
          =image_tag @topic.post.url, class: 'topic__img-show'
      -else
        .content__video
          =video_tag @topic.post.url, controls: true, autobuffer: true, class: 'topic__img-show'



.topic__text-show
  %br/
  =@topic.user.nickname
  %span ...
  %br/
  %br/
  = simple_format @topic.text, class: 'topic__text-format-show'
  %br/
  %br/
  

.footer__nav-show
  =render 'shared/footer_nav'