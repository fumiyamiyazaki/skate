.user__header-show
  = @user.nickname

.user__content-show
  .user__content-left
    .user__profile-image
      -if @user.image.present?
        =image_tag @user.image.url, width:'100%', height:'500px';
      -else
        =image_tag "no-image.png", width:'100%', height:'500px';
        
    .user__img-icon
      -if user_signed_in? && current_user.id == @user.id
        = form_for(@user) do |f|
          = f.label :image, class: 'img__label-show' do
            =icon 'fas', 'clone'
            =f.file_field :image, class: 'image__file-show'
          =icon 'fas', 'arrow-right', class: 'arrow__icon'
          %button{:type => "submit"}
            =icon 'far', 'check-circle'

  .user__content-right
    .user__nickname-show
      = @user.nickname
    .user__email-show
      = @user.email
    .user__status-show
      .topics__status
        =@user.topics_count
        %p topics
      .following__status
        =link_to @user.following.count, following_user_path, class: 'following__link' 
        %p following
      .followers__status
        =link_to @user.followers.count, followers_user_path, class: 'follower__link'
        %p followers
    .user__follow-btn
      =render 'follow_form' if user_signed_in?


.user__topics-navbar
  .topics__navbar
    %button{class: 'image__btn'}
      Topics  
    -# %button{type: 'button', class: 'video__btn'}
    -#   Videos

.user__topics-contents
  - @topics.each do |topic|
    -# .user__topics-show
      -# =image_tag topic.post.url
    .user__topics-show
      =link_to topic_path(topic), class: 'topic__link-show' do
        .user__topic-post{:style => "background-image: url(#{topic.post});"}
