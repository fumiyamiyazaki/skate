.user__header-show
  = @user.nickname

.user__content-show
  .user__content-left
    .user__profile-image
      -if @user.image.present?
        =image_tag current_user.image.url, width:'100%', height:'500px';
    .user__img-icon
      = form_for(@user) do |f|
        = f.label :image, class: 'img__label-show' do
          =icon 'fas', 'clone'
          =f.file_field :image, class: 'image__file-show'
        =f.label :submit, class: 'submit__label' do
          =icon 'fas', 'exchange-alt'
          =f.submit '変更', class: 'image__submit-show' 

  .user__content-right
    .user__nickname-show
      = @user.nickname
    .user__email-show
      = @user.email
    .user__status-show
      .topics__status
        =@user.topics_count
        %p topics
      .following__status
        12
        %p following
      .followers__status
        12
        %p followers
    .user__follow-btn
      %button{type: 'submit', class: 'follow__btn-show'}
        follow


.user__topics-navbar
  .topics__navbar
    %button{type: 'button', class: 'image__btn'}
      Images
    %button{type: 'button', class: 'video__btn'}
      Videos

.user__topics-contents
  - @topics.each do |topic|
    -# .user__topics-show
      -# =image_tag topic.post.url
    .user__topics-show
      =link_to topic_path(topic), class: 'topic__link-show' do
        .user__topic-post{:style => "background-image: url(#{topic.post});"}
  

  
  
  

.user__nav-show
  = render 'shared/footer_nav'
